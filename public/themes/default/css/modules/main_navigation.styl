/* MAIN HEADER */
.main-header,
.main-footer
	background-color $green

.main-footer
	padding-top 22px
	margin-top 25px
	
.main-page-title
	float left
	
.main-page-title__link
	display block
	font-size 45px
	line-height 45px
	padding 9px 0 11px 0
	
.main-navigation-container,
.main-lower-navigation-container
	padding 13px 0 0 45px
	float left

.main-lower-navigation-container
	padding 24px 0 0 60px

/* MAIN NAVIGATION */
.main-navigation,
.main-lower-navigation
	overflow hidden
	
.main-navigation__item,
.main-lower-navigation__item
	float left
	position relative
	padding 0 21px 0 20px

.main-navigation__item:after,
.main-lower-navigation__item:after
	height 14px
	margin -7px 0 0 0

.main-navigation__item:first-child,
.main-lower-navigation__item:first-child
	padding-left 0
	
.main-navigation__item:last-child,
.main-lower-navigation__item:last-child
	padding-right 0

.main-navigation__link,
.main-lower-navigation__link
	font-family $font-normal
	font-weight $font-wt-extrabold
	text-transform uppercase
	color #fff
	font-size 30px
	line-height 23px
	display block
	
.main-lower-navigation__link
	font-size 35px
	line-height 28px

/* DONT MISS NAVIGATION */
.dont-miss
	padding-top 4px
	overflow hidden
	font-size 14px
	line-height 15px
	
.dont-miss__item
	float left
	padding 0 12px 0 11px
	position relative

.dont-miss__item:after
	height 11px
	margin -5.5px 0 0 0

.dont-miss__item:first-child
	padding 0
	
.dont-miss__title
	color $orange-light
	font-family $font-normal
	font-weight $font-wt-extrabold
	text-transform uppercase
	
.dont-miss__link
	color #fff
	font-family $font-normal
	font-weight $font-wt-regular
	
/* REUSABLE STYLES */
.main-navigation__item:after,
.main-lower-navigation__item:after,
.dont-miss__item:after
	content ""
	display block
	position absolute
	right 0
	top 50%
	border-right 1px solid $orange-light

.dont-miss__item:last-child:after,
.dont-miss__item:first-child:after,
.main-navigation__item:last-child:after,
.main-lower-navigation__item:last-child:after
	display none

.dont-miss__link:hover,
.main-navigation__link:hover,
.main-lower-navigation__link:hover
	color $red

/* GLOBAL SEARCH */
.global-search
	float left
	width 158px
	position relative
	padding-left 32px
	margin 13px 0 0 45px

.global-search__search-bar
	display block
	width 100%
	height 20px
	background-color $green-dark
	line-height 20px
	border none
	color $creme
	outline none

.global-search:before
	display block
	position absolute
	padding 0 10px 0 6px
	height 20px
	top 0
	left 0
	background-color $green-dark
	line-height 20px
	text-align center
	color $red

/* UPPER SOCIAL NAVIGATION */
.upper-social,
.lower-social
	overflow hidden
	float left
	padding-top 13px

.lower-social
	padding 22px 0 0 54px

.upper-social__item,
.lower-social__item
	float left
	padding-left 5px

.lower-social__item
	padding-left 6px
	
.upper-social__link,
.lower-social__link
	display block
	width 20px
	line-height 20px
	
.lower-social__link
	width 31px
	line-height 31px
	font-size 25px
	
.upper-social__link:before,
.lower-social__link:before 
	color #fff
	display  block
	text-align center

.icon-facebook:before
	background-color #3a5899
	
.icon-twitter:before
	background-color #2ca9e0
	
.icon-youtube:before
	background-color #c8332c

.icon-instagram:before
	background-color #527ea3

.upper-social__item:last-child
	clear both
	float right
	padding-top 9px
.icon-fm
	width 45px
	
.icon-fm:before
	width 45px
	height 15px
	font-size 50px
	line-height 12px
	text-indent -3px

.icon-fm:hover:before
	color $red






